{% set tag = page.courrier %}

<html>
	<head>
		<style>
			@page {
				margin: 170pt 50pt 40pt;
				font-family: Helvetica;
			}
			#header {
				position: fixed;
				left: 0;
				top: -100pt;
				right: 0;
				height: 100pt;
				margin-bottom: 0;
				border-bottom: 1pt solid #000;
			}
			#footer {
				position: fixed;
				left: 0;
				bottom: -60pt;
				right: 0;
				height: 100pt;
				font-size: 8pt;
				padding-top: 10pt;
				border-top: 1pt solid #000;
			}
			#footer p {
				position: fixed;
				width: 200pt;
				text-align: center;
			}
			.gras {
				font-weight: bold;
			}
			.centrer {
				text-align: center;
			}
			.t6 {
				font-size: 6pt;
			}
			.t8 {
				font-size: 8pt;
			}
			.t9 {
				font-size: 9pt;
			}
			.t10 {
				font-size: 10pt;
			}
			.t12 {
				font-size: 12pt;
			}
		</style>
	</head>
	<body>
		<div id="header">
			<span class="gras" style="font-size: 16pt;">
				EI {{ tag.AuteurInitial_identiteUsuelleTitre }}
			</span><br>
			<span class="gras" style="font-size: 16pt;">
				{{ tag.AuteurInitial_job }}
			</span><br>
			<div class="t8" style="position: fixed; left: 0; top: -60pt; display: inline-block; vertical-align: bottom; margin: 0; padding: 0;">
				N°RPPS : {{ tag.AuteurInitial_rpps }}
			</div>
			<div class="t8" style="position: fixed; right: 0; top: -60pt; display: inline-block; width: 35%; vertical-align: bottom; text-align: right; padding: 0; margin: 0;">
				{{ tag.AuteurInitial_etablissementAdressePro }}<br>
				{{ tag.AuteurInitial_adresseProLigne1 }}<br>
				{{ tag.AuteurInitial_adresseProLigne2 }}<br>
				Consultations sur RDV : {{ tag.AuteurInitial_telPro }}<br>
				En cas d’urgence, composez le 15
			</div>
		</div>
	<!-- stop head -->
	<div class="t9">